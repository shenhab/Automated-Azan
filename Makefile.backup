# PORTAINER CLI DEPLOYMENT
#=============================================================================

deploy-portainer: deploy-check docker-build
	@echo "üöÄ Deploying to Portainer via CLI..."
	@echo ""
	@echo "üìã Checking Portainer CLI..."
	@command -v portainer &>/dev/null || (echo "‚ùå Portainer CLI not found. Install from: https://github.com/portainer/portainer-cli" && exit 1)
	@echo "‚úÖ Portainer CLI available"
	@echo ""
	@echo "üîç Validating Portainer connection..."
	@read -p "Enter Portainer URL (e.g., http://localhost:9000): " PORTAINER_URL && \
	read -p "Enter Portainer username: " PORTAINER_USER && \
	read -s -p "Enter Portainer password: " PORTAINER_PASS && \
	echo "" && \
	echo "üîê Authenticating with Portainer..." && \
	portainer login --url "$$PORTAINER_URL" --username "$$PORTAINER_USER" --password "$$PORTAINER_PASS" && \
	echo "‚úÖ Authentication successful" && \
	echo "" && \
	echo "üì¶ Deploying stack to Portainer..." && \
	portainer stack deploy \
		--name automated-azan \
		--compose-file portainer-stack.yml \
		--env TZ=UTC \
		--env LOG_FILE=/var/log/azan_service.log && \
	echo "" && \
	echo "üéâ Portainer Deployment Complete!" && \
	echo "=====================================" && \
	echo "üïå Automated Azan deployed to Portainer" && \
	echo "üåê Access via Portainer dashboard" && \
	echo "üìã Stack name: automated-azan" && \
	echo ""

deploy-portainer-update: docker-build
	@echo "üîÑ Updating Portainer stack..."
	@portainer stack update \
		--name automated-azan \
		--compose-file portainer-stack.yml \
		--env TZ=UTC \
		--env LOG_FILE=/var/log/azan_service.log
	@echo "‚úÖ Portainer stack updated successfully"

deploy-portainer-remove:
	@echo "üóëÔ∏è  Removing Portainer stack..."
	@portainer stack remove --name automated-azan
	@echo "‚úÖ Portainer stack removed"

deploy-portainer-status:
	@echo "üìä Checking Portainer stack status..."
	@portainer stack ls | grep automated-azan || echo "‚ùå automated-azan stack not found"

